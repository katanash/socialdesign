<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:born_address) %></th>
      <th><%= model_class.human_attribute_name(:job_type) %></th>
      <th><%= model_class.human_attribute_name(:workat) %></th>
      <th><%= model_class.human_attribute_name(:job_description) %></th>
      <th><%= model_class.human_attribute_name(:facebook_url) %></th>
      <th><%= model_class.human_attribute_name(:owned_media) %></th>
      <th><%= model_class.human_attribute_name(:vision) %></th>
      <th><%= model_class.human_attribute_name(:join_purpose) %></th>
      <th><%= model_class.human_attribute_name(:give_free) %></th>
      <th><%= model_class.human_attribute_name(:give_cost) %></th>
      <th><%= model_class.human_attribute_name(:trouble) %></th>
      <th><%= model_class.human_attribute_name(:needs) %></th>
      <th><%= model_class.human_attribute_name(:thinking) %></th>
      <th><%= model_class.human_attribute_name(:recent_news) %></th>
      <th><%= model_class.human_attribute_name(:perspective_talent) %></th>
      <th><%= model_class.human_attribute_name(:life_carrier) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, user_path(user) %></td>
        <td><%= user.image %></td>
        <td><%= user.name %></td>
        <td><%= user.address %></td>
        <td><%= user.born_address %></td>
        <td><%= user.job_type %></td>
        <td><%= user.workat %></td>
        <td><%= user.job_description %></td>
        <td><%= user.facebook_url %></td>
        <td><%= user.owned_media %></td>
        <td><%= user.vision %></td>
        <td><%= user.join_purpose %></td>
        <td><%= user.give_free %></td>
        <td><%= user.give_cost %></td>
        <td><%= user.trouble %></td>
        <td><%= user.needs %></td>
        <td><%= user.thinking %></td>
        <td><%= user.recent_news %></td>
        <td><%= user.perspective_talent %></td>
        <td><%= user.life_carrier %></td>
        <td><%=l user.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      user_path(user), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_path(user), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_path(user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_path,
            :class => 'btn btn-primary' %>
