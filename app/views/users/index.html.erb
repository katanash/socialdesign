<p id="notice"><%= notice %></p>

<h1>メンバー一覧</h1>

<table>
  <thead>
    <tr>
      <th>写真</th>
      <th>お名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.image %></td>
        <td><%= user.name %></td>
        <td><%= link_to '表示する', user %></td>
        <td><%= link_to '編集する', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: 'よろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規登録はこちら', new_user_path %>
